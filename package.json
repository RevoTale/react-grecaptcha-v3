{
  "engines": {
    "node": ">= 16.0.0"
  },
  "name": "@rusted/react-recaptcha-v3",
  "version": "0.0.5",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/RustedLabs/react-google-recaptcha-v3.git",
    "directory": "packages/my-awesome-package-example"
  },
  "scripts": {
    "test": "jest --no-watchman && pnpm lint",
    "clean": "rimraf node_modules/",
    "build": "rimraf dist/ && tsc && tsc --module commonjs --outDir dist/cjs && rimraf dist/*/tsconfig.tsbuildinfo",
    "watch-build": "npx tsc-watch --project tsconfig.json --onSuccess \"yarn build\"",
    "lint": "eslint ./",
    "fix": "pnpm prettier && eslint --fix ./",
    "prettier": "prettier --cache --write --list-different .",
    "prettier:check": "prettier --cache --check .",
    "types:check": "tsc --noEmit",
    "test-and-build": "yarn build && yarn test",
    "prerelease": "yarn build",
    "prepublishOnly": "pnpm lint",
    "prepare": "pnpm build",
    "preversion": "pnpm lint",
    "version": "pnpm fix && git add -A src",
    "postversion": "git push && git push --tags"
  },
  "devDependencies": {
    "@babel/core": "^7.21.8",
    "@babel/preset-env": "^7.21.5",
    "@babel/preset-typescript": "^7.21.5",
    "@testing-library/react": "^14.0.0",
    "@testing-library/react-hooks": "^8.0.1",
    "@types/jest": "^28.1.8",
    "@types/react": "^18.2.11",
    "@typescript-eslint/eslint-plugin": "^5.59.11",
    "@typescript-eslint/parser": "^5.59.11",
    "babel-jest": "^28.1.3",
    "eslint": "^8.40.0",
    "eslint-config-prettier": "^8.8.0",
    "eslint-plugin-es5": "^1.5.0",
    "eslint-plugin-prettier": "^4.2.1",
    "eslint-plugin-react": "^7.32.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "jest": "^28.1.3",
    "jest-docblock": "^28.1.1",
    "jest-environment-jsdom": "^29.0",
    "jest-junit": "^16.0.0",
    "lint-staged": "^13.2.2",
    "prettier": "^2.8.8",
    "react-test-renderer": "^18.2.0",
    "rimraf": "^4.4.1",
    "ts-jest": "^28.0.8",
    "ts-node": "^10.9.1",
    "tslib": "^2.5.2",
    "tsx": "^3.12.7",
    "typescript": "^5.0.4"
  },
  "lint-staged": {
    "packages/**/src/**/*.{ts,tsx}": [
      "eslint --fix"
    ],
    "**/*.{js,jsx,cjs,mjs,ts,tsx,graphql,gql,yml,yaml,json,md}": [
      "prettier --write"
    ],
    "yarn.lock": [
      "npx yarn-deduplicate"
    ]
  },
  "keywords": [
    "react",
    "google",
    "recaptcha",
    "v3",
    "nextjs",
    "captcha"
  ],
  "author": "Rusted Love",
  "bugs": {
    "url": "https://github.com/RustedLabs/react-google-recaptcha-v3/issues"
  },
  "homepage": "https://github.com/RustedLabs/react-google-recaptcha-v3",
  "dependencies": {
    "@bladl/react-hooks": "^1.5.2",
    "react": "^18.0",
    "react-dom": "^18.0"
  },
  "files": [
    "./dist"
  ],
  "main": "./dist/cjs/index.js",
  "module": "./dist/esm/index.js",
  "types": "./dist/typings/index.d.ts",
  "private": false,
  "exports": {
    ".": {
      "types": {
        "default": "./dist/cjs/index.js"
      },
      "module": "./dist/esm/index.js",
      "default": "./dist/cjs/index.js"
    },
    "./package.json": "./package.json"
  },
  "sideEffects": false,
  "typings": "dist/typings/index.d.ts",
  "typescript": {
    "definition": "dist/typings/index.d.ts"
  },
  "publishConfig": {
    "directory": "dist",
    "access": "public"
  },
  "type": "module",
  "description": "Google Recaptcha V3 for React.js based application. Do not blow up your Page Insights score."
}
