{
  "engines": {
    "node": ">= 16.0.0"
  },
  "name": "@rusted/react-recaptcha-v3",
  "version": "0.3.0",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/RustedLabs/react-google-recaptcha-v3.git"
  },
  "scripts": {
    "test": "jest --no-watchman && pnpm lint",
    "clean": "rimraf node_modules/",
    "build": "pnpm build:code && pnpm build:types && pnpm build:copy",
    "build:types": "tsc --emitDeclarationOnly",
    "build:copy": "cp package.json dist/ && cp README.md dist/ && cp LICENSE dist/",
    "build:code": "node ./build.js",
    "watch-build": "npx tsc-watch --project tsconfig.json --onSuccess \"yarn build\"",
    "lint": "eslint ./",
    "fix": "pnpm prettier && eslint --fix ./",
    "prettier": "prettier --cache --write --list-different .",
    "prettier:check": "prettier --cache --check .",
    "types:check": "tsc --noEmit",
    "test-and-build": "yarn build && yarn test",
    "prerelease": "yarn build",
    "prepublishOnly": "pnpm lint",
    "prepare": "pnpm build",
    "preversion": "pnpm lint",
    "version": "pnpm fix && git add -A src",
    "postpublish": "git push && git push --tags",
    "changeset:version": "changeset version && git add --all",
    "changeset:publish": "changeset publish"
  },
  "devDependencies": {
    "@babel/core": "^7.21.8",
    "@babel/preset-env": "^7.21.5",
    "@babel/preset-typescript": "^7.21.5",
    "@testing-library/react": "^14.0.0",
    "@testing-library/react-hooks": "^8.0.1",
    "@types/jest": "^28.1.8",
    "@types/react": "^18.2.11",
    "@typescript-eslint/eslint-plugin": "^5.59.11",
    "@typescript-eslint/parser": "^5.59.11",
    "babel-jest": "^28.1.3",
    "eslint": "^8.40.0",
    "eslint-config-prettier": "^8.8.0",
    "eslint-plugin-es5": "^1.5.0",
    "eslint-plugin-prettier": "^4.2.1",
    "eslint-plugin-react": "^7.32.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "jest": "^28.1.3",
    "jest-docblock": "^28.1.1",
    "jest-environment-jsdom": "^29.0",
    "jest-junit": "^16.0.0",
    "lint-staged": "^13.2.2",
    "prettier": "^2.8.8",
    "react-test-renderer": "^18.2.0",
    "rimraf": "^4.4.1",
    "ts-jest": "^28.0.8",
    "ts-node": "^10.9.1",
    "tslib": "^2.5.2",
    "tsx": "^3.12.7",
    "typescript": "^5.0.4",
    "resolve-glob": "^1.0.0",
    "@changesets/cli": "^2.26.1",
    "esbuild": "^0.18.10"
  },
  "lint-staged": {
    "packages/**/src/**/*.{ts,tsx}": [
      "eslint --fix"
    ],
    "**/*.{js,jsx,cjs,mjs,ts,tsx,graphql,gql,yml,yaml,json,md}": [
      "prettier --write"
    ],
    "yarn.lock": [
      "npx yarn-deduplicate"
    ]
  },
  "keywords": [
    "react",
    "google",
    "recaptcha",
    "v3",
    "nextjs",
    "captcha"
  ],
  "author": "Rusted Love",
  "bugs": {
    "url": "https://github.com/RustedLabs/react-google-recaptcha-v3/issues"
  },
  "homepage": "https://github.com/RustedLabs/react-google-recaptcha-v3",
  "dependencies": {
    "@bladl/react-hooks": "^1.5.2",
    "react": "^18.0",
    "react-dom": "^18.0"
  },
  "main": "./src/index.ts",
  "private": false,
  "sideEffects": false,
  "publishConfig": {
    "directory": "dist",
    "module": "lib/index.js",
    "main": "lib/index.cjs",
    "types": "lib/index.d.ts",
    "access": "public",
    "exports": {
      ".": {
        "import": "./lib/index.js",
        "require": "./lib/index.cjs",
        "types": "./lib/index.d.ts"
      }
    }
  },
  "type": "module",
  "packageManager": "pnpm@8.6.2",
  "description": "Google Recaptcha V3 for React.js based application. Do not blow up your Page Insights score."
}
